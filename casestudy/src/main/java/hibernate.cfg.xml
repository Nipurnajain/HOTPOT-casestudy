<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "https://hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>

	<session-factory>


		<!-- Database connection properties - Driver, URL, user, password -->
		<property name="hibernate.connection.driver_class">
			com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">
			jdbc:mysql://localhost:3306/hotpot</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">Nipurna@123</property>

		<property name="hbm2ddl.auto">update</property>
		<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="show_sql">true</property>

		<!--mapping model/entity class -->
		<mapping class="com.hexaware.casestudy.entity.DeliveryAddress" />
		<mapping class="com.hexaware.casestudy.entity.Customers" />
		<mapping class="com.hexaware.casestudy.entity.Cart" />
		<mapping class="com.hexaware.casestudy.entity.Restaurants" />
		<mapping class="com.hexaware.casestudy.entity.OrderDetails" />
		<mapping class="com.hexaware.casestudy.entity.Administrator" />
		<mapping class="com.hexaware.casestudy.entity.Discount" />
		<mapping class="com.hexaware.casestudy.entity.MenuItems" />
		<mapping class="com.hexaware.casestudy.entity.Payment" />
		<mapping class="com.hexaware.casestudy.entity.Orders" />


	</session-factory>



</hibernate-configuration>		
